<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Client_detail"
    android:background="@drawable/gglround">

    <!--<ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/arprofile"
        android:src="@drawable/ic_camera_alt_black_24dp"/>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/view1"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/arprofile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@color/colorPrimary"
        android:layout_marginTop="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColorHint="#ffffff"
        android:textStyle="bold"
        android:id="@+id/name"
        android:layout_below="@+id/arprofile"/>

    <!--<TextView
        android:id="@+id/artist_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="5dp"
        android:hint="mail"
        android:textColor="#000000"
        android:textSize="20dp" />-->


    <TextView
        android:id="@+id/typeofartist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:text="Category:"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="hello"
        android:textStyle="bold"
        android:layout_below="@id/typeofartist"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        android:id="@+id/titlee"/>

    <TextView
        android:id="@+id/detailsofartist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlee"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text="Description:"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:hint="hello"
        android:layout_below="@+id/detailsofartist"
        android:linksClickable="true"
        android:autoLink="web"
        android:textColor="#000000"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:id="@+id/descripiion"/>

    <Button
        android:id="@+id/hireart"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Hire Artist"
        android:layout_below="@id/descripiion"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/button_border"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

</RelativeLayout>