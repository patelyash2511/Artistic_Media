<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gglround"
    tools:context=".ArtistActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/profile_pic"
        android:layout_width="140.00dp"
        android:layout_height="140.00dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/ic_launcher_foreground" />-->

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/artist" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:text="Select Artist Category:"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:entries="@array/selectartist"></Spinner>


            <EditText
                android:id="@+id/profilename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Enter Your Name"
                android:textColorHint="#ffffff"/>

            <EditText
                android:id="@+id/mailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Enter Your E-Mail ID"
                android:inputType="textEmailAddress"
                android:textColorHint="#ffffff"/>

            <EditText
                android:id="@+id/Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Description"
                android:textColorHint="#ffffff"

                />


            <Button
                android:id="@+id/save"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/button_border"
                android:text="save" />

            <Button
                android:id="@+id/logout"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:text="Back to Login"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/button_border"/>

            <Button
                android:id="@+id/Show_profle"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/button_border"
                android:text="Show Profile" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>